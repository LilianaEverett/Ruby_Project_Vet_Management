<nav id="menu">
  <li class="menu-item"><a href='/owners/new'>Add New</a></li>
</nav>


<table style="width:100%">
  <tr>
    <td>
      <% @owners.each do |owner| %>
        <%= owner.format_name %>
        <%= owner.contact %>
      <% end %>

    </td>

    <td>
      <% @owners.each do |owner| %>
      <a href="/owners/<%= owner.id %>/edit">Edit</a>
      <form method="post" action="/owners/ <%= owner.id %>/delete">
        <input type="submit" value="Delete">
      </form>
      <% end %>
    </td>

    <td>
      <% @patients.each do |patient| %>
      <img src="/images/<%= patient.pic %>" alt="">
      <a href="/patients/<%= patient.id %>"><%= patient.name %></a>
      <% end %>
    </td>
  </tr>
</table>


<div class="">
  <div class="">
    <p><%= @owner.format_name %> </p>
    <p><%= @owner.contact %></p>

    <form method="get" action="/owners/ <%= @owner.id %>/edit">
      <input type="submit" value="Edit">
    </form>

    <form method="post" action="/owners/ <%= @owner.id %>/delete">
      <input type="submit" value="Delete">
    </form>

    <form method="get" action="/owners/ <%= @owner.id %>/show">
      <input type="submit" value="Pets">
    </form>
  </div>
  <div class="pic-list">
    <% @patients.each do |patient| %>
      <img src="/images/<%= patient.pic %>" alt="">
      <a href="/patients/<%= patient.id %>"><%= patient.name %></a>
    <% end %>
  </div>
</div>

<h2>Edit <%= @patient.name %></h2>
<form method="POST" action="/patients/<%= @patient.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= @patient.name %>"/>
    </div>

    <div class="form-el">
      <label for="type">Type:</label>
      <input type="text" name="type" id="type" value="<%= @patient.type%>"/>
    </div>

    <div class="form-el">
      <label for="db">Date Of Birth:</label>
      <input type="text" name="db" id="db" value="<%= @patient.db%>"/>
    </div>

    <div class="form-el">
      <label for="owner_id">Select Owner:</label>
      <select name="owner_id" id="owner_id" selected="<%= @patient.owner_id  %>">
        <% @owners.each do |owner| %>
            <option value= "<%= owner.id %>" <%= "selected" if @patient.owner_id == owner.id %>> <%= owner.format_name %></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="vet_id">Select Veterinarian:</label>
      <select name="vet_id" id="vet_id" selected="<%= @patient.vet_id  %>">
        <% @vets.each do |vet| %>
            <option value= "<%= vet.id %>" <%= "selected" if @patient.vet_id == vet.id %>> <%= vet.format_name %></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="notes">Appointment Notes:</label>
      <input type="text" name="notes" id="notes" value="<%= @patient.notes %>"/>
    </div>

    <div class="form-el">
      <label for="pic">Picture: </label>
      <input type="text" name="pic" id="pic" value="<%= @patient.pic %>">
    </div>

    <div class="form-el">
      <input type="submit" value="Save"/>
    </div>

  </div>
</form>

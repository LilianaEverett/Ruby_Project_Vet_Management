
<form method="post" action="/vets">
  <label for="name">Name: </label>
  <input type="text" name="name" id="name">

  <label for="type">type: </label>
  <input type="text" name="type" id="type">

  <label for="db">Date of Birth: </label>
  <input type="text" name="db" id="db">

  <label for="owner_contact">Owner Contact: </label>
  <input type="text" name="owner_contact" id="owner_contact">

  <form action="/patients" method="post">
    <label>
    Select a Veterinarian:
      <select name="vet_id">
        <% for vet in @vets %>
        <option value="<%= vet.id %>"><%= vet.first_name + " " + vet.last_name%></option>
        <% end %>
      </select>
    </label>

    <input type='submit' value="Save">
  </form>

  <label for="notes">Appointment Notes: </label>
  <input type="text" name="notes" id="notes">

  <input type="submit" value="Save">
</form>
